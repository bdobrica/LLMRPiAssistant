# RPI Assistant Configuration
# This file takes precedence over environment variables.
# Remove or comment out any settings you want to control via environment variables.

[audio]
# Audio device configuration
sample_rate = 16000
chunk_size = 1280              # 80ms @ 16kHz
channels = 4                    # Number of input channels
mic_channel_index = 0           # Which channel to use (0-3)
device_match = seeed            # Substring to match audio device name

[wakeword]
# Wake word detection settings
threshold = 0.5                 # Detection threshold (0.0-1.0, higher = less sensitive)
cooldown_seconds = 1.0          # Minimum time between wake word detections

# Comma-separated list of wake word models to load
# Leave empty or comment out to load all default models
# Example models: hey_jarvis, alexa, hey_mycroft, hey_rhasspy
# Use fewer models to reduce memory usage on limited devices
# models = hey_jarvis
models =

[recording]
# Voice recording settings
max_duration_seconds = 10.0     # Maximum recording length
silence_hold_seconds = 0.8      # Stop recording after this much silence
silence_rms_threshold = 0.007   # RMS level below which is considered silence
                                # Lower = more sensitive, stops on quieter sounds
                                # Higher = less sensitive, needs louder silence
                                # Typical values: 0.005 (very sensitive) to 0.02 (less sensitive)
pre_roll_seconds = 0.4          # How much audio to capture before wake word
output_path = /tmp/command.wav  # Where to save recorded audio

[openai]
# OpenAI API configuration
# REQUIRED: Set your API key here or via OPENAI_API_KEY environment variable
api_key = 

# Whisper transcription settings
whisper_model = whisper-1       # Whisper model to use

# Chat completion settings
chat_model = gpt-4o-mini        # Chat model (gpt-4o-mini, gpt-4o, gpt-3.5-turbo, etc.)
max_tokens = 500                # Maximum tokens in response
temperature = 0.7               # Response creativity (0.0-2.0)

# System prompt for the assistant
system_prompt = You are a helpful voice assistant running on a Raspberry Pi. 
    Provide concise, friendly responses suitable for voice interaction.

[led]
# LED configuration
count = 12                      # Number of LEDs (12 for ReSpeaker 4-Mic Array, 3 for 2-Mic pHAT)

[logging]
# Logging configuration
log_file = openai_interactions.log    # Where to save interaction logs
log_level = INFO                       # Logging level (DEBUG, INFO, WARNING, ERROR)
